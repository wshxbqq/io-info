{
    "compilerOptions": {
        "target":"es5",
        "experimentalDecorators": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "dist",
        "watch": true
    },
    "include": [
        "lib/**/*",
        "test/**/*",
        "index.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}